<tr id="<%= dom_id song %>" class="hover:bg-base-200/50 transition-colors">
  <td>
    <div class="flex items-center gap-3">
      <div class="avatar placeholder">
        <div class="bg-accent text-accent-content rounded-full w-8 lg:w-10">
          <span class="text-xs lg:text-sm font-bold"><%= song.name.first.upcase %></span>
        </div>
      </div>
      <div class="font-semibold text-base-content text-sm lg:text-base"><%= song.name %></div>
      
    </div>
  </td>
  <td>
    <div class="text-base-content/70 text-sm lg:text-base"><%= song.band_name %></div>
  </td>
  <td>
    <div class="flex gap-1 lg:gap-2 justify-end">
      <%= link_to band_song_path(song.band, song), class: "btn btn-sm btn-outline gap-1", title: "View song details" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
        <span class="hidden lg:inline">View</span>
      <% end %>
      <%= link_to edit_band_song_path(song.band, song), class: "btn btn-sm btn-outline gap-1", title: "Edit song" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        <span class="hidden lg:inline">Edit</span>
      <% end %>
      <%= button_to band_song_path(song.band, song), method: :delete, form_class: "inline", class: "btn btn-sm btn-error gap-1", title: "Delete song", data: { turbo_confirm: "Are you sure you want to delete this song?" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        <span class="hidden lg:inline">Delete</span>
      <% end %>
    </div>
  </td>
</tr>
