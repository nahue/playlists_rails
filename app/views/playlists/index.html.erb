<% content_for :title, "Playlists" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Playlists</h1>
    <%= link_to "New playlist", new_playlist_path, class: "btn btn-primary" %>
  </div>

  <div id="playlists" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @playlists.any? %>
      <table class="table">
      <!-- head -->
      <thead>
        <tr>
          <th></th>
                      <th>Name</th>
                      <th>Description</th>
          
        </tr>
      </thead>
      <tbody>
      <% @playlists.each do |playlist| %>
          <tr>
            <td></td>
                      <td>
            <%= playlist.name %>
            </td>          
                      <td>
            <%= playlist.description %>
            </td>          
          
          <td>
            <div class="flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", playlist, class: "btn btn-info" %>
            <%= link_to "Edit", edit_playlist_path(playlist), class: "btn" %>
            <%= button_to "Destroy", playlist, method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure?" } %>
          </div>
          </td>
          </tr>
          
      <% end %>
      </tbody>
      </table>
    <% else %>
      <p class="text-center my-10">No playlists found.</p>
    <% end %>
  </div>
</div>