<% content_for :title, "Showing playlist" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing playlist</h1>

  <%= render @playlist %>

  <div class="flex gap-4 items-center">
    <%= link_to "Edit this playlist", edit_playlist_path(@playlist), class: "btn btn-primary" %>
    <%= link_to "Back to playlists", playlists_path, class: "btn" %>
    <%= button_to "Destroy this playlist", @playlist, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0", class: "btn btn-error", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>