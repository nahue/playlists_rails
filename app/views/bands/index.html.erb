<% content_for :title, "Bands" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Bands</h1>
    <% if authenticated? %>
      <%= link_to "New band", new_band_path, class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Sign in to create bands", new_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <div id="bands" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @bands.any? %>
      <ul class="list bg-base-100 rounded-box shadow-md">
        
      <% @bands.each do |band| %>
        <li class="list-row">
          <%= render band %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", band, class: "btn btn-primary" %>
            <%= link_to "Edit", edit_band_path(band), class: "btn btn-primary" %>
            <%= button_to "Destroy", band, method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </li>
      <% end %>
      </ul>
    <% else %>
      <p class="text-center my-10">No bands found.</p>
    <% end %>
  </div>
</div>
