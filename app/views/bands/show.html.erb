<% content_for :title, "Showing band" %>

  <div id="<%= dom_id @band %>" class="container mx-auto px-6 py-8 max-w-full bg-base-200">
    <% if notice.present? %>
      <div class="alert alert-success mb-8 max-w-4xl mx-auto" id="notice">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= notice %></span>
      </div>
    <% end %>

    <!-- Top Section: Header and Actions -->
    <div class="w-full gap-6 mb-8">
      <!-- Header Section -->
        <div class="card bg-base-100 shadow-xl w-full">
          <div class="card-body">
            <div class="flex flex-col sm:flex-row items-center gap-6 text-center sm:text-left">
              <div class="flex-1">
                <%= render @band %>
              </div>
              <div class="flex gap-4 items-start">
                <%= link_to edit_band_path(@band), class: "btn btn-primary gap-2 w-14" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              <% end %>
              
              <%= link_to bands_path, class: "btn btn-outline gap-2 w-14" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
              <% end %>
              
              <%= button_to @band, method: :delete, form_class: "w-14", class: "btn btn-error gap-2 w-full", data: { turbo_confirm: "Are you sure you want to delete this band? This action cannot be undone." } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>

    <!-- Bottom Section: Songs and Band Info -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Songs Section -->
      <div class="lg:col-span-2">
        <div class="card bg-base-100 shadow-xl w-full">
          <div class="card-body">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
              <h2 class="card-title text-2xl">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                </svg>
                Songs
                <div class="badge badge-primary badge-lg"><%= @band.songs.count %></div>
              </h2>
              <%= link_to new_band_song_path(@band), class: "btn btn-primary gap-2" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add New Song
              <% end %>
            </div>
            
            <div id="songs">
              <% if @band.songs.any? %>
                <div class="overflow-x-auto">
                  <table class="table table-zebra w-full">
                    <thead>
                      <tr>
                        <th class="text-base font-semibold">Song Name</th>
                        <th class="text-base font-semibold">Band Name</th>
                        <th class="text-base font-semibold text-right">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @band.songs.each do |song| %>
                        <%= render "songs/song_row", song: song %>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <% else %>
                <div class="text-center py-16">
                  <div class="flex flex-col items-center gap-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                    </svg>
                    <div>
                      <h3 class="text-xl font-semibold text-base-content/70 mb-3">No songs yet</h3>
                      <p class="text-base-content/50 mb-6 max-w-md">Start building your playlist by adding your first song! Create an amazing collection of tracks for your band.</p>
                      <%= link_to new_band_song_path(@band), class: "btn btn-primary gap-2 btn-lg" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Add Your First Song
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>